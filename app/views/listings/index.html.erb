<div class="container">
  <div class="card">
    <div class="card-content">
      <% @listings.each do |listing| %>
        <div class="media">
          <div class="media-left">
            <figure class="image">
              <%= image_tag(thumbnail_url(listing), alt: 'listing-thumbnail-image', class: 'listing-thumbnail-image') %>
            </figure>
          </div>
          <div class="media-content">
            <%= link_to(listing.title, listing.url, class: "title is-4") %>
            <p><%= "#{truncate(listing.description, length: 150)}..." %></p>
            <time><%= listing.date_posted %></time>
          </div>
        </div>   
      <% end %>
    </div>
  </div>
  <%= will_paginate @listings, renderer: BulmaPagination::Rails %>
</div>